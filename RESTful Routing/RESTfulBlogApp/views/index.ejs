<% include partials/header.ejs %>
<div class="ui main container text">
    <div class="ui header huge">RESTful Blog App</div>
    <div class="ui attached top segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
            <div class="item">
                <div class="image">
                    <img src=<%= blog.image %>>
                </div>
                <div class="content">
                    <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                    <div class="meta">
                        <span><%= blog.created.toDateString() %></span>
                    </div>
                    <div class="description">
                        <p>
                            <%= blog.body.substring(0, 100) %>
                            ...
                        </p>
                    </div>
                    <div class="extra">
                        <p>
                            <a class="ui floated basic button violet" href="/blogs/<%= blog._id %>">
                                Read More <i class="right chevron icon"></i>
                            </a>
                        </p>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</div>    
<% include partials/footer.ejs %>